<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6969EC"
    tools:context=".Libretto">

    <include
        android:id="@+id/toolbar_libretto"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="344dp"
        android:background="#ffffff"
        android:onClick="goto_note"
        android:text="Note \n Disciplinari"
        android:textColor="#6969EC"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_libretto" />

    <Button
        android:id="@+id/button1"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginTop="188dp"
        android:background="#ffffff"
        android:onClick="goto_valutazioni"
        android:text="Valutazioni"
        android:textColor="#6969EC"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_libretto" />


</androidx.constraintlayout.widget.ConstraintLayout>