<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Stato_salute">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_stato_salute"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="409dp"
        android:layout_height="487dp"
        android:layout_below="@+id/toolbar_stato_salute"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:isScrollContainer="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/addStato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_stato_salute"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/addStato"
        android:layout_width="141dp"
        android:layout_height="57dp"
        android:onClick="nuovo_stato"
        android:text="aggiungi nuovo stato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_stato_salute"
        app:layout_constraintVertical_bias="0.886" />

</androidx.constraintlayout.widget.ConstraintLayout>